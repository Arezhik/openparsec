# GNU Make solution makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=debug_x32
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_x32)
  client_config = debug_x32
  server_config = debug_x32
endif
ifeq ($(config),debug_x64)
  client_config = debug_x64
  server_config = debug_x64
endif
ifeq ($(config),release_x32)
  client_config = release_x32
  server_config = release_x32
endif
ifeq ($(config),release_x64)
  client_config = release_x64
  server_config = release_x64
endif

PROJECTS := client server

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

client:
ifneq (,$(client_config))
	@echo "==== Building client ($(client_config)) ===="
	@${MAKE} --no-print-directory -C build/client -f Makefile config=$(client_config)
endif

server:
ifneq (,$(server_config))
	@echo "==== Building server ($(server_config)) ===="
	@${MAKE} --no-print-directory -C build/server -f Makefile config=$(server_config)
endif

clean:
	@${MAKE} --no-print-directory -C build/client -f Makefile clean
	@${MAKE} --no-print-directory -C build/server -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_x32"
	@echo "  debug_x64"
	@echo "  release_x32"
	@echo "  release_x64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   client"
	@echo "   server"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
